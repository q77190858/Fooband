<resources> 
    <declare-styleable name="circleProgressBar">   
        <attr name="circleColor" format="color"/>
        <attr name="circleProgressColor" format="color"/> 
        <attr name="circleWidth" format="dimension"></attr> 
        <attr name="textColor" format="color"/>   
        <attr name="textSize" format="dimension"/>  
        <attr name="progress" format="integer"></attr>  
        <attr name="max" format="integer"></attr>  
        <attr name="textIsDisplayable" format="boolean"></attr> 
        <attr name="icon" format="reference"></attr>  
        <attr name="style"> 
            <enum name="STROKE" value="0"></enum> 
            <enum name="FILL" value="1"></enum> 
        </attr> 
        <attr name="type"> 
            <enum name="SPORT" value="0"></enum> 
            <enum name="SLEEP" value="1"></enum> 
        </attr> 
        
    </declare-styleable>  
</resources> 
