<resources> 
    <declare-styleable name="histogramChart">   
        <attr name="histogramColor" format="color" />
        <attr name="histogramColumnNum" format="integer" />
        <attr name="histogramColumnBetween" format="dimension" />
        <attr name="histogramColumnDefaultH" format="dimension" />
        <attr name="histogramType"> 
            <enum name="HISTOGRAM_TYPE_FOR_DAY" value="0"></enum> 
            <enum name="HISTOGRAM_TYPE_FOR_WEEK" value="1"></enum> 
            <enum name="HISTOGRAM_TYPE_FOR_MONTH" value="2"></enum> 
            <enum name="HISTOGRAM_TYPE_FOR_YEAR" value="3"></enum>  
            <enum name="HISTOGRAM_TYPE_FOR_SLEEP_DAY" value="4"></enum>
        </attr> 
        
        
    </declare-styleable>  
</resources>
