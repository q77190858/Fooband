	                android:id="@+id/id_rl_setting_calendar0"
	                android:layout_width="match_parent"
	                android:layout_height="72dp"
	                android:layout_marginLeft="@dimen/menu_apart_item_margin_left"
	                android:layout_marginRight="@dimen/menu_apart_item_margin_right" >

                       <TextView
                           android:id="@+id/id_tv_calendar0_title"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentLeft="true" 
                           android:layout_marginTop="8dp"                         
                           android:text="@string/string_function_agendar_reminder_title_default"
                           android:textColor="@color/gray"
                           android:textSize="24sp" />

                       <com.grdn.widgets.SwitchButton
                           android:id="@+id/id_sb_calendar0_active_flag"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:layout_centerVertical="true"
                           android:layout_gravity="right|center_vertical"
                           android:padding="6dp"
                           android:paddingTop="10dp" />
                   	                 
                       <TextView
                           android:id="@+id/id_tv_calendar0_datetime"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="43dp"
                           android:text="@string/string_function_agendar_reminder_datetime_default"
                           android:textColor="@color/gray"
                           android:textSize="16sp" />
                 	               
