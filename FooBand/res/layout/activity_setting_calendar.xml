	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/menu_apart_title_margin_left"
	            android:layout_marginTop="@dimen/menu_apart_title_margin_top"
	            android:text="@string/string_function_agendar_reminder_descriptor"
	            android:textColor="@color/gray"
	            android:textSize="@dimen/menu_apart_title_text_size"
	            android:textStyle="bold" />

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="6dp"
	            android:background="@color/white"
	            android:orientation="vertical" >

	            <ImageView
	                android:id="@+id/divider00"
	                android:layout_width="match_parent"
	                android:layout_height="1dp"
	                android:background="@drawable/divider"
	                android:contentDescription="@string/dummy" />

