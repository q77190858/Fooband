<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_ll_progress_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

	<TextView
	    android:id="@+id/id_tv_update_success"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="32dp"
	    android:text="@string/dfu_update_rom_success" />
    
    <TextView
        android:id="@+id/id_tv_update_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_update_success"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:text="@string/dfu_update_device_info" />
    
</RelativeLayout>