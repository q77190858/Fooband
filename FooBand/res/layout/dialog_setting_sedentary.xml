<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/id_ll_sedentary_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.foogeez.fooband" >

    <LinearLayout 
        android:id="@+id/id_ll_setting_sedentary_dialog"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:background="#00ffffff"
		android:orientation="vertical" >
    
		<include layout="@layout/included_setting_dialog_title" />  
		
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:orientation="horizontal" >
	        
	        <com.grdn.wheels.WheelVerticalView android:id="@+id/sedentary_hours"
				app:visibleItems="4"
	            app:selectionDivider="@drawable/divider_dark_gradient_horizontal"
	            app:selectionDividerHeight="1px"
	            app:selectionDividerActiveAlpha="100"
	            app:selectionDividerDimmedAlpha="255" 
				android:layout_width="50dp"
	            android:layout_height="wrap_content" />
	
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent" >
	
	            <TextView
	                android:id="@+id/id_tv_sedentary_hour_unit"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:text="@string/string_time_hour_unit"
	                android:textSize="18sp" />
	
	        </RelativeLayout>
	
	        <com.grdn.wheels.WheelVerticalView android:id="@+id/sedentary_minutes"
				app:visibleItems="4"
	            app:selectionDivider="@drawable/divider_dark_gradient_horizontal"
	            app:selectionDividerHeight="1px"
	            app:selectionDividerActiveAlpha="100"
	            app:selectionDividerDimmedAlpha="255" 
				android:layout_width="50dp"
	            android:layout_height="wrap_content" />
	        
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent" >
	
	            <TextView
	                android:id="@+id/id_tv_sedentary_minute_unit"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:text="@string/string_time_minute_unit"
	                android:textSize="18sp" />
	
	        </RelativeLayout>
       
	    </LinearLayout>
		
		
	</LinearLayout> 
</LinearLayout>