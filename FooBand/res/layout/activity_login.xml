<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_login_bg" 
    android:focusable="true"
    android:padding="50dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

      <ImageView
          android:id="@+id/id_iv_welcome_login"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="10dp"
          android:contentDescription="@string/dummy"
          android:scaleType="centerInside"
          android:src="@drawable/logo" >
      </ImageView>

      <RelativeLayout
          android:id="@+id/id_rl_account"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="64dp" >

          <EditText
              android:id="@+id/id_et_account"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@drawable/bg_edittext"
              android:inputType="text|textEmailAddress|number"
              android:labelFor="@id/id_et_account"
              android:maxEms="16"
              android:minEms="16"
              android:maxLength="33"
              android:textSize="14sp"
              android:paddingLeft="8dp"
              android:paddingRight="25dp"
              android:text="@string/string_user_account"
              android:textCursorDrawable="@null" >
          </EditText>

          <ImageView
              android:id="@+id/imageView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="8dp"
              android:contentDescription="@string/dummy"
              android:src="@drawable/icon_account" />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/id_rl_password"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp" >

          <EditText
              android:id="@+id/id_et_password"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@drawable/bg_edittext"
              android:inputType="text|textPassword"
              android:labelFor="@id/id_et_password"
              android:maxEms="16"
              android:minEms="6"
              android:maxLength="16"
              android:textSize="14sp"
              android:paddingLeft="8dp"
              android:text="@string/string_user_password"
              android:textCursorDrawable="@null" >
          </EditText>

          <ImageView
              android:id="@+id/imageView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="8dp"
              android:contentDescription="@string/dummy"
              android:src="@drawable/icon_password" />
      </RelativeLayout>
      
        <TextView
          android:id="@+id/id_tv_user_notice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginTop="20dp"
          android:text="@string/string_user_login_notice"
          android:textSize="12sp" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">
          
	        <TextView
	            android:id="@+id/id_tv_login"
	            android:layout_width="0dp"
	            android:layout_height="40dp"
	            android:layout_weight="2"
	            android:background="@drawable/bg_image_button_ro"
	            android:clickable="true"
	            android:contentDescription="@string/dummy"
	            android:gravity="center"
	            android:text="@string/string_user_login_login" />
	
	        <TextView
	            android:id="@+id/id_tv_register"
	            android:layout_width="0dp"
	            android:layout_height="40dp"
	            android:layout_weight="1"
	            android:layout_marginLeft="4dp"
	            android:background="@drawable/bg_image_button_ro"
	            android:clickable="true"
	            android:contentDescription="@string/dummy"
	            android:gravity="center"
	            android:text="@string/string_user_register_register" />
	            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right|bottom">
            
            
          <Button
            android:id="@+id/tv_password_recoverd"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_image_button_ro"
            android:text="@string/string_user_password_recoverd"
            android:textSize="12sp" />
            
        </LinearLayout>

       
</LinearLayout>