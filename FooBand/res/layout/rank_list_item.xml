<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/list_usr_rank_number"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:text="1"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/list_usr_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/list_usr_rank_number"
        android:contentDescription="@string/dummy"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/list_usr_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/list_usr_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/list_usr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:text="N/A"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_usr_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/list_usr_name"
            android:layout_marginLeft="4dp"
            android:text="ID: 000000" />

        <TextView
            android:id="@+id/list_usr_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/list_usr_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:text="0.00KM"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/list_usr_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/list_usr_id"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:text="0STEP"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>